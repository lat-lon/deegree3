<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree</artifactId>
  <packaging>pom</packaging>
  <version>3.1-pre11</version>
  <name>deegree</name>
  <url>http://www.deegree.org</url>

<scm>
    <connection>scm:git:git@github.com:lat-lon/deegree3.git</connection>
    <developerConnection>scm:git:git@github.com:lat-lon/deegree3.git</developerConnection>
    <url>https://github.com/lat-lon/deegree3.git</url>
  </scm>

  <repositories>
    <repository>
      <id>latlon-repo</id>
      <url>http://repo.lat-lon/nexus/content/groups/public/</url>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>latlon-releases</id>
      <url>http://repo.lat-lon/nexus/content/repositories/releases/</url>
    </repository>
    <snapshotRepository>
      <id>latlon-snapshots</id>
      <url>http://repo.lat-lon/nexus/content/repositories/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>

  <pluginRepositories>
    <pluginRepository>
      <id>latlon-repo</id>
      <url>http://repo.lat-lon/nexus/content/groups/public/</url>
    </pluginRepository>
  </pluginRepositories>
  
  <build>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
           <preparationGoals>clean install</preparationGoals>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>deegree-misc/deegree-parent</module>
    <module>deegree-services/deegree-services-parent</module>
    <module>deegree-services/deegree-stable-service-parent</module>
    <module>deegree-services/deegree-tomcat-parent</module>
    <module>deegree-tools/deegree-tools-parent</module>
    <module>deegree-client</module>
    <module>deegree-core</module>
    <module>deegree-layers</module>
    <module>deegree-datastores</module>
    <module>deegree-misc</module>
    <module>deegree-processproviders</module>
    <module>deegree-services</module>
    <module>deegree-tools</module>
    <module>deegree-workspaces</module>
  </modules>
</project>

