<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree-sos-demo</artifactId>
  <packaging>war</packaging>
  <version>3.1-pre11-rapideye</version>
  <name>deegree 3 SOS demo</name>
  <url>http://maven.apache.org</url>

  <parent>
    <groupId>org.deegree</groupId>
    <artifactId>deegree-tomcat-parent</artifactId>
    <version>3.1-pre11-rapideye</version>
    <relativePath />
  </parent>

  <repositories>
    <repository>
      <id>deegree-repo</id>
      <url>http://repo.deegree.org/content/groups/public/</url>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-workspace-base</artifactId>
      <version>3.1-pre11-rapideye</version>
      <type>deegree-workspace</type>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-sos-webclient</artifactId>
      <version>3.1-pre11-rapideye</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-sos-webclient</artifactId>
      <version>3.1-pre11-rapideye</version>
      <type>zip</type>
      <classifier>sos-webclient-template</classifier>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>jfreechart</groupId>
      <artifactId>jfreechart</artifactId>
      <version>1.0.13</version>
    </dependency>
    <dependency>
      <groupId>jfreechart</groupId>
      <artifactId>jcommon</artifactId>
      <version>1.0.16</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>deegree-sos-demo</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.8</version>
        <executions>
          <execution>
            <id>unpack-client-dependencies-zip</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sos-webclient-template</classifier>
              <type>zip</type>
              <includeGroupIds>org.deegree</includeGroupIds>
              <includeArtifactIds>deegree-sos-webclient</includeArtifactIds>
              <outputDirectory>src/main/webapp/client</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
          <execution>
            <id>insertwebclientinfo</id>
            <phase>compile</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.deegree.client.sos.fileutils.InsertWebclientInfo</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>replaceclientlink</id>
            <phase>compile</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.deegree.client.sos.fileutils.ReplaceClientLink</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <target>
                <copy file="src/main/webapp/WEB-INF/newweb.xml" tofile="src/main/webapp/WEB-INF/web.xml" />
                <delete file="src/main/webapp/WEB-INF/newweb.xml" />
                <copy file="src/main/webapp/newconsole.xhtml" tofile="src/main/webapp/console.xhtml" />
                <delete file="src/main/webapp/newconsole.xhtml" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
